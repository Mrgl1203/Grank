<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.gulei.common.view.TextProgress
        android:id="@+id/textProgress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxProgress="100"
        app:circle_radius="18dp"
        app:progress_text_size="8sp"
        app:progress_reach_color="@color/colorPrimary"
        app:progress_reach_height="3dp"
        app:progress_unreach_color="@color/cGray"
        app:progress_unreach_height="2dp"
        app:style_circle="true" />

</android.support.constraint.ConstraintLayout>